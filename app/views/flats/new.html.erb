<h1>new flat</h1>
<%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests, :collection => [1, 2, 3, 4, 5, 6, 7] %>
  <%= f.submit "Submit", class: "btn btn-success" %>
  <% end %>
